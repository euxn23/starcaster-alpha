<%- model_class = User -%>
<div class="col-lg-3">
  <%= render partial: 'users/sidebar', locals: {user: @user} %>
</div>
<div class="col-lg-9">
  <%= bootstrap_flash %>
    <!--<div class="panel-heading">-->
      <!--<h3 class="panel-title">Panel primary</h3>-->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#config" data-toggle="tab" aria-expanded="true">Config</a></li>
        <li class=""><a href="#hatena" data-toggle="tab" aria-expanded="false">Hatena</a></li>
        <li class=""><a href="#pocket" data-toggle="tab" aria-expanded="false">Pocket</a></li>
        <li class=""><a href="#qiita" data-toggle="tab" aria-expanded="false">Qiita</a></li>
      </ul>
    <!--</div>-->
    <div class="panel-body config-tab">
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="config">
          <h1>お気に入りを取得しよう</h1>
          <p>Twitterからあなたのお気に入りを取得します。</p>
          <p>直近約3000件からリンクや画像を含むツイートを取得し、保存します。</p>
          <p>この処理にはしばらく時間がかかります。</p>
          <p><%= link_to 'お気に入りを取得', '/users/fetch', class:"btn btn-primary btn-lg"  %></p>
        </div>
        <div class="tab-pane fade" id="hatena">
          <% if @user.h_id.present? %>
              <p>[H] 認証済み</p>
          <% else %>
              <p><%= link_to "認証する", user_omniauth_authorize_path(:hatena) %></p>
          <% end %>
        </div>
        <div class="tab-pane fade" id="pocket">
            <% if @user.p_id.present? %>
                <p>[P] 認証済み</p>
            <% else %>
                <p><%= link_to "認証する", user_omniauth_authorize_path(:pocket) %></p>
            <% end %>
        </div>
        <div class="tab-pane fade" id="qiita">
            <% if @user.q_id.present? %>
                <p>[Q] 認証済み</p>
            <% else %>
                <p><%= link_to "認証する", user_omniauth_authorize_path(:qiita) %></p>
            <% end %>
        </div>
      </div>
    </div>
</div>
