<%- model_class = User -%>
<% content_for :title do %>
  <%= @user.name %> | StarCaster
<% end %>
<div class="col-lg-3">
  <%= render partial: 'users/sidebar', locals: {user: @user} %>
</div>
<div class="col-lg-9">
  <%= bootstrap_flash %>
  <div class="col-lg-6">
    <%= render partial: 'users/twitter', locals: {tweets: @urls, user: @user, title: :Urls, type: :urls} %>
  </div>
  <div class="col-lg-6">
    <%= render partial: 'users/twitter', locals: {tweets: @media, user: @user, title: :Media, type: :media} %>
  </div>
</div>
